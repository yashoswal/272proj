	<div class="box" height="300" width="400" align="center">
	<div style="float:left">
	<h2> Rating Vs Review </h2>
		<canvas id="canvas1" height="500" width="600"></canvas>

	<script>
		var barChartData = {
			labels : ["<%=happeningData[0].name%>","<%=happeningData[1].name%>","<%=happeningData[2].name%>","<%=happeningData[3].name%>","<%=happeningData[4].name%>"],
			datasets : [
				{
					fillColor : "rgba(220,220,220,0.5)",
					strokeColor : "rgba(220,220,220,1)",
					data : [<%=happeningData[0].review_count%>/1000,<%=happeningData[1].review_count%>/1000,<%=happeningData[2].review_count%>/1000,<%=happeningData[3].review_count%>/1000,<%=happeningData[4].review_count%>/1000]
				},
				{
					fillColor : "rgba(151,187,205,0.5)",
					strokeColor : "rgba(151,187,205,1)",
					data : [<%=happeningData[0].rating%>,<%=happeningData[1].rating%>,<%=happeningData[2].rating%>,<%=happeningData[3].rating%>,<%=happeningData[4].rating%>]
				}
			]
			
		}
	
	var myLine = new Chart(document.getElementById("canvas1").getContext("2d")).Bar(barChartData);
	</script>
	</div>
	<div>
	<h2> Review Share </h2>
	<canvas id="canvas2" height="500" width="400"></canvas>


	<script>

		var doughnutData = [
				{
					value: <%=happeningData[0].review_count%>,
					color:"#F7464A"
				},
				{
					value : <%=happeningData[1].review_count%>,
					color : "#46BFBD"
				},
				{
					value : <%=happeningData[2].review_count%>,
					color : "#FDB45C"
				},
				{
					value : <%=happeningData[3].review_count%>,
					color : "#949FB1"
				},
				{
					value : <%=happeningData[4].review_count%>,
					color : "#4D5360"
				}
			
			];
		
	var myDoughnut = new Chart(document.getElementById("canvas2").getContext("2d")).Doughnut(doughnutData);
	
	</script>
