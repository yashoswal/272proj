<body id="page1">
<div class="bg1">
  <div class="main">
    <!--header -->
    <header>
      <nav>
        <ul id="menu">
          <li><a href="/home">Home</a></li>
          <li><a href="/happening">Happening Places</a></li>
          <li><a href="/developers">Developers</a></li>
          <li><a href="/poweredBy">Powered By</a></li>
        </ul>
      </nav>
      <h1><a href="/home" id="logo">Happening feel the best</a></h1>
    </header>
    <!--header end-->
    <div class="box">
        <article id="content">
	        <div class="wrapper">
	        
	          <h2>Most Happening <%=categories%> in <%=place%></h2>
	          
	        <table><tr><td>   
	        <form name="chart" action="/chart/<%=categories%>/<%=place%>" method="post">
	        <input type="hidden" name="categories" value="<%=categories%>">
	        <input type="hidden" name="place" value="<%=place%>">
	        <input name="Submit" type="submit" value="Rating V/S Reviews" style="background-color:#7532A9;color:#FFFFFF; font-size:20px;width:200px; height:30px;"/>
	        </form> </td><td>
	        <form name="chartpie" action="/chartDoughnut/<%=categories%>/<%=place%>" method="post">
	        	<input type="hidden" name="categories" value="<%=categories%>">
	        	<input type="hidden" name="place" value="<%=place%>">
	        	<input name="Submit" type="submit" value="Reviews Analysis" style="background-color:#7532A9;color:#FFFFFF; font-size:20px;width:200px; height:30px;"/>
	        </form></td></tr></table>
	          <div class="wrapper">
	          	<% //console.log('Happening data inside HTML:: '+happeningData);
						if(happeningData != null && happeningData.length > 0) {
  							var j=2;
	                    	for(var i=0;i<happeningData.length;i++) {
	                    	
	             %>
	             <% if (i==j){ 
	             	j=i+3;%>
	             <div class="cols">
	             <% }else{ %>
	            <div class="cols marg_right1"><%}%> 
	              <figure class="pad_bot1">
	              	<a href="/showBusinessDetailPage/<%=happeningData[i].id%>">
		              	<div id="gridClass">
		              		<br/>
		              		<p><img src="<%=happeningData[i].image_url%>"/></p>
		              		<p style="font-size:20px;font-style:italic"><%= happeningData[i].name%></p>
		              		<p><img src="<%=happeningData[i].rating_img_url%>"/></p>
		              		<p style="font-size:10px;">Review Count: <%= happeningData[i].review_count%></p>
		              	</div>
	              	</a>
	              </figure>
	            </div>
	            <% }} else {%>
					<p> No Records found for the Category in the given Location... </p>
					<%}%>
	          </div>
	        </div>
      	</article>
    </div>
  </div>
</div>
<script>
$(document).ready(function () {
    //gallery
    $("#gallery1").jCarouselLite({
        btnNext: ".next",
        btnPrev: ".prev",
        mouseWheel: true,
        vertical: true,
        circular: true,
        visible: 2,
        speed: 600,
        easing: 'easeOutCirc'
    });
    Cufon.now();
})
</script>
